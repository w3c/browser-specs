{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://github.com/w3c/browser-specs/tree/master/schema/data.json",

  "type": "object",
  "properties": {
    "repos": {
      "type": "object",
      "propertyNames": {
        "pattern": "^[\\w\\-\\.]+\\/[\\w\\-\\.]+$"
      },
      "additionalProperties": {
        "type": "object",
        "properties": {
          "comment": {
            "type": "string"
          },
          "lastreviewed": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
          }
        },
        "required": ["comment"],
        "additionalProperties": false
      }
    },
    "specs": {
      "type": "object",
      "propertyNames": {
        "$ref": "definitions.json#/proptype/url"
      },
      "additionalProperties": {
        "type": "object",
        "properties": {
          "comment": {
            "type": "string"
          },
          "lastreviewed": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
          }
        },
        "required": ["comment"],
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
