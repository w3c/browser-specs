{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://github.com/w3c/browser-specs/tree/master/schema/definitions.json",

  "proptype": {
    "url": {
      "type": "string",
      "format": "uri"
    },

    "filename": {
      "type": "string",
      "pattern": "^[\\w\\-]+\\.html$"
    },

    "relativePath": {
      "type": "string",
      "pattern": "^[\\w\\-\\.]+(\\/[\\w\\-\\.]+)*$"
    },

    "shortname": {
      "type": "string",
      "pattern": "^[\\w\\-]+((?<=\\-\\d+)\\.\\d+)?$"
    },

    "series": {
      "type": "object",
      "properties": {
        "shortname": {
          "type": "string",
          "pattern": "^[\\w\\-]+$"
        },
        "currentSpecification": { "$ref": "#/proptype/shortname" },
        "releaseUrl": { "$ref": "#/proptype/url" },
        "nightlyUrl": { "$ref": "#/proptype/url" }
      },
      "required": ["shortname"],
      "additionalProperties": false
    },

    "seriesVersion": {
      "type": "string",
      "pattern": "^\\d+(\\.\\d+){0,2}$"
    },

    "seriesComposition": {
      "type": "string",
      "enum": ["full", "delta"]
    },

    "forceCurrent": {
      "type": "boolean"
    },

    "title": {
      "type": "string"
    },

    "source": {
      "type": "string",
      "enum": ["w3c", "specref", "spec"]
    },

    "release": {
      "type": "object",
      "properties": {
        "url": { "$ref": "#/proptype/url" },
        "filename": { "$ref": "#/proptype/filename" },
        "pages": {
          "type": "array",
          "items": { "$ref": "#/proptype/url" }
        }
      },
      "required": ["url"],
      "additionalProperties": false
    },

    "nightly": {
      "type": "object",
      "properties": {
        "url": { "$ref": "#/proptype/url" },
        "filename": { "$ref": "#/proptype/filename" },
        "sourcePath": { "$ref": "#/proptype/relativePath" },
        "pages": {
          "type": "array",
          "items": { "$ref": "#/proptype/url" }
        },
        "repository": { "$ref": "#/proptype/url" }
      },
      "additionalProperties": false
    },

    "tests": {
      "type": "object",
      "properties": {
        "repository": { "$ref": "#/proptype/url" },
        "testPaths": {
          "type": "array",
          "items": { "$ref": "#/proptype/relativePath" },
          "minItems": 1
        },
        "excludePaths": {
          "type": "array",
          "items": { "$ref": "#/proptype/relativePath" },
          "minItems": 1
        }
      },
      "required": ["repository"],
      "additionalProperties": false
    },

    "groups": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "url": { "$ref": "#/proptype/url" }
        },
        "required": ["name", "url"],
        "additionalProperties": false
      }
    },

    "organization": {
      "type": "string"
    }
  }
}